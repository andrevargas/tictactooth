<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.programacao.sisnet.tictactooth.MainActivity">

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/A1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#309eff" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/A2"
        android:background="#309eff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/A3"
        android:background="#309eff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/B1"
        android:background="#309eff"
        android:layout_below="@+id/A1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/B2"
        android:background="#309eff"
        android:layout_alignTop="@+id/B1"
        android:layout_alignLeft="@+id/A2"
        android:layout_alignStart="@+id/A2" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/B3"
        android:background="#309eff"
        android:layout_alignTop="@+id/B2"
        android:layout_alignLeft="@+id/A3"
        android:layout_alignStart="@+id/A3" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/C1"
        android:background="#309eff"
        android:layout_below="@+id/B1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/C2"
        android:background="#309eff"
        android:layout_alignTop="@+id/C1"
        android:layout_alignRight="@+id/B2"
        android:layout_alignEnd="@+id/B2" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/C3"
        android:background="#309eff"
        android:layout_alignTop="@+id/C2"
        android:layout_alignLeft="@+id/B3"
        android:layout_alignStart="@+id/B3" />
</RelativeLayout>
