<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.GameActivity">

    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:layout_marginTop="40dp"
        android:id="@+id/frameLayout">

        <Button
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/A1"
            android:layout_gravity="left|top"
            android:background="#eeeeee" />

        <Button
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/A2"
            android:layout_gravity="center_horizontal|top"
            android:background="#eeeeee" />

        <Button
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/A3"
            android:layout_gravity="right|top"
            android:background="#eeeeee" />

        <Button
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/B1"
            android:layout_gravity="center_vertical|left"
            android:background="#eeeeee" />

        <Button
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/B2"
            android:layout_gravity="center"
            android:background="#eeeeee" />

        <Button
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/B3"
            android:layout_gravity="right|center_vertical"
            android:background="#eeeeee" />

        <Button
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/C1"
            android:layout_gravity="left|bottom"
            android:background="#eeeeee" />

        <Button
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/C2"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#eeeeee" />

        <Button
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/C3"
            android:layout_gravity="right|bottom"
            android:background="#eeeeee" />
    </FrameLayout>

    <Button
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="@string/restart"
        android:id="@+id/restartButton"
        android:background="@color/accent_material_light"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="@string/exit"
        android:id="@+id/exitButton"
        android:background="@android:color/holo_red_light"
        android:textSize="17sp"
        android:layout_alignTop="@+id/restartButton"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:id="@+id/xWins"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:id="@+id/draws"
        android:layout_alignBottom="@+id/xWins"
        android:layout_toRightOf="@+id/xWins"
        android:layout_toEndOf="@+id/xWins"
        android:textSize="20dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:id="@+id/circleWins"
        android:layout_alignBottom="@+id/draws"
        android:layout_toRightOf="@+id/draws"
        android:layout_toEndOf="@+id/draws"
        android:textSize="20dp"
        android:textAlignment="textEnd" />

</RelativeLayout>
